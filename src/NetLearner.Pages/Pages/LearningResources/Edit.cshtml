@page
@model NetLearner.Pages.LearningResources.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Existing Resource</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LearningResource.Id" />
            <div class="form-group">
                <label asp-for="LearningResource.Name" class="control-label"></label>
                <input asp-for="LearningResource.Name" class="form-control" />
                <span asp-validation-for="LearningResource.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningResource.Url" class="control-label"></label>
                <input asp-for="LearningResource.Url" class="form-control" />
                <span asp-validation-for="LearningResource.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningResource.ResourceListId" class="control-label"></label>
                <select asp-for="LearningResource.ResourceListId" class="form-control" asp-items="ViewBag.ResourceListId"></select>
                <span asp-validation-for="LearningResource.ResourceListId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningResource.ContentFeedUrl" class="control-label"></label>
                <input asp-for="LearningResource.ContentFeedUrl" class="form-control" />
                <span asp-validation-for="LearningResource.ContentFeedUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Learning Resources</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
